{
  "extends": ["react-app", "prettier", "plugin:react/recommended"],
  "plugins": ["react", "prettier", "@typescript-eslint"],
  "rules": {
    "prettier/prettier": [
      "warn",
      {
        "arrowParens": "avoid",
        "semi": false,
        "trailingComma": "none",
        "endOfLine": "lf",
        "tabWidth": 2,
        "useTabs": false,
        "singleQuote": true,
        "printWidth": 120,
        "jsxSingleQuote": false,
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": ["error"]
      }
    ]
  }
}
